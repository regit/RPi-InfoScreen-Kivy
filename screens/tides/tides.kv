<TidesScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'screens/tides/images/escalles.jpg'
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "[size=20][color=#202020]{name:s}[/color][/size]".format(**root.location)
            markup: True
            text_size: self.size
            valign: "top"
            halign: "center"
            padding_y: 5
        BoxLayout:
            orientation: "horizontal"
            Label:
                text: "[color=#202020][size=60][b]{type_i18n:s} {h:02d}:{m:02d}[/b][/size][/color]".format(**root.prev)
                markup: True
            Label:
                text: "[color=#202020][size=60][b]{type_i18n:s} {h:02d}:{m:02d}[/b][/size][/color]".format(**root.next)
                markup: True
        Label:
            text: "[size=50]{h:02d}:{m:02d}[/size][size=30] {s:02d}[/size]".format(**root.timedata)
            markup: True
        BoxLayout:
            orientation: "horizontal"
            padding: 5
            Label:
                text: "[color=#888888]Photo by Ã‰ric Leblond[/color]"
                text_size: self.size
                valign: "bottom"
                halign: "left"
                markup: True
            Label:
                text: "[color=#888888]Data by Worldtides[/color]"
                text_size: self.size
                valign: "bottom"
                halign: "right"
                markup: True
